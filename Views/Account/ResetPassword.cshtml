@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card shadow-lg p-5" style="max-width:480px; width:100%;
                background: rgba(255,255,255,0.05);
                border:1px solid rgba(255,255,255,0.1);
                border-radius:16px;
                backdrop-filter:blur(12px);
                box-shadow:0 0 25px rgba(0,0,0,0.4);">

        <h2 class="fw-bold mb-4" 
            style="background: var(--gradient);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;
                   letter-spacing:1px;">
            Reset Password
        </h2>

        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-light"></label>
                <input asp-for="Password" class="form-control stylish-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-light"></label>
                <input asp-for="ConfirmPassword" class="form-control stylish-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100"
                    style="background: var(--gradient); color:#fff; font-weight:500; border-radius:10px;">
                Reset Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
