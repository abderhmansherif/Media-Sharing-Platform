@model ForgotPasswordViewModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card text-center p-5 shadow-lg"
         style="max-width: 480px; width: 100%;
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid rgba(255,255,255,0.1);
                border-radius: 16px;
                backdrop-filter: blur(12px);
                box-shadow: 0 0 25px rgba(0,0,0,0.4);">

        <h2 class="fw-bold mb-4" 
            style="background: var(--gradient);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;
                   letter-spacing: 1px;">
            <i class="fa-solid fa-lock me-2"></i> Forgot Password
        </h2>

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control stylish-input" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 px-4 py-2"
                    style="border-radius: 10px;
                           background: var(--gradient);
                           color: #fff;
                           font-weight: 500;
                           transition: 0.3s;">
                Send Reset Link
            </button>
        </form>

        <div class="mt-4">
            <a asp-action="Login" asp-controller="Account" class="btn-link" style="color: var(--secondary-color);">
                Back to Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
