@model RegisterAccountViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container d-flex justify-content-center align-items-center">
    <div class="register-card shadow-lg rounded-4 p-4">
        <h2 class="mb-4 text-center fw-bold text-gradient">
            <i class="fas fa-user-plus me-2"></i> Create Your Account
        </h2>

        <form method="post" asp-action="Register" asp-controller="Account" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold"></label>
                <input asp-for="Username" class="form-control stylish-input" placeholder="Enter your username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control stylish-input" placeholder="Enter your email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control stylish-input" placeholder="Create a password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control stylish-input" placeholder="Confirm your password..." />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-gradient fw-bold">
                    <i class="fas fa-user-check me-2"></i> Register
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a href="/Account/Login" class="login-link">
                Already have an account? <span class="text-gradient">Login</span>
            </a>
        </div>
    </div>
</div>

@section Styles {
<style>
    /* ====== Layout ====== */
    .register-container {
        min-height: calc(100vh - 200px);
    }

    .register-card {
        max-width: 440px;
        width: 100%;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        animation: fadeIn 0.6s ease;
    }

    /* ====== Headings ====== */
    .text-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* ====== Inputs ====== */
    .stylish-input {
        background: rgba(255, 255, 255, 0.12);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .stylish-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .stylish-input:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
    }

    /* ====== Validation ====== */
    .field-validation-error {
        color: #ff4d4d;
        font-weight: bold;
        margin-top: 5px;
        display: block;
    }

    input.input-validation-error {
        border: 1px solid #ff4d4d !important;
        animation: shake 0.2s ease-in-out 1;
        background-color: rgba(255, 0, 0, 0.1);
        color: #fff;
    }

    input.input-validation-error:focus {
        box-shadow: 0 0 0 0.15rem rgba(255, 77, 77, 0.25);
    }

    @@keyframes shake {
        0% { transform: translateX(0); }
        25% { transform: translateX(-4px); }
        50% { transform: translateX(4px); }
        75% { transform: translateX(-2px); }
        100% { transform: translateX(0); }
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* ====== Buttons ====== */
    .btn-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        padding: 12px;
        font-size: 1rem;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    }

    /* ====== Links ====== */
    .login-link {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .login-link:hover {
        color: #7eb3ff;
        text-decoration: underline;
    }

    .text-danger {
        color: #ff6b6b !important;
    }

</style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
