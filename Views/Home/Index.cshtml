@using System.Security.Claims
@model HomeViewModel

<div class="container mt-5">
    <!-- Hero Section - محسنة -->
    <section class="hero-section text-center mb-5 py-5">
        <div class="hero-content">
            <h1 class="display-4 fw-bold mb-3 animate-fade-in">Share your audio and visual creations</h1>
            <p class="lead mb-4 animate-fade-in-delay">BeatBox platform allows you to share audio and videos with a creative community</p>
            <div class="hero-buttons animate-fade-in-delay-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Media/Create/@(User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.NameIdentifier).Value)" class="btn btn-primary btn-lg me-3 px-4 py-2">
                        <i class="fas fa-cloud-upload-alt me-2"></i> Start your journey
                    </a>
                }
                else
                {
                    <a href="/Account/Register" class="btn btn-primary btn-lg me-3 px-4 py-2">
                        <i class="fas fa-user-plus me-2"></i> Join us
                    </a>
                    <a href="/Account/Login" class="btn btn-outline-light btn-lg px-4 py-2">
                        <i class="fas fa-sign-in-alt me-2"></i> Log in
                    </a>
                }
                @if(User.Identity.IsAuthenticated)
                {
                    <a href="/Media/Explore" class="btn btn-outline-light btn-lg px-4 py-2">
                        <i class="fas fa-compass me-2"></i> Explore creations
                    </a>
                }
            
            </div>
        </div>
        
        <!-- إحصائيات سريعة -->
        <div class="hero-stats mt-5 animate-stats">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <div class="stat-item">
                        <h3 class="stat-number">@Model.TotalUploads+</h3>
                        <p class="stat-label">Shared media</p>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="stat-item">
                        <h3 class="stat-number">@Model.TotalUsers+</h3>
                        <p class="stat-label">Active user</p>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="stat-item">
                        <h3 class="stat-number">2</h3>
                        <p class="stat-label">Content type</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- أحدث الصوتيات -->
    <section class="audio-media mb-5">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="fas fa-music me-2"></i>Latest audios
            </h2>
            <a href="/Media/Explore" class="view-all-link">View all<i class="fas fa-arrow-left ms-1"></i></a>
        </div>
        
        @if (Model.RecentAudioMedias.Any())
        {
            <div class="row">
                @foreach (var media in Model.RecentAudioMedias)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="media-card audio-card">
                            <div class="card-image">
                                <div class="audio-thumbnail">
                                    <i class="fas fa-music"></i>
                                    <img src="@media.ImageUrl" class="card-img-top" alt="@media.Title" loading="lazy">
                                </div>
                                <div class="card-overlay">
                                    <div class="overlay-content">
                                        <button class="btn-play-audio" data-audio-src="@media.Url">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="media-type-badge">
                                    <i class="fas fa-music"></i> Audio
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@media.Title</h5>
                                <p class="card-text">@media.Descreption</p>
                                <div class="card-footer">
                                    <div class="user-info">
                                        <img src="@(media.User?.ProfilePicture?? "/Uploads/Images/navs/default_nav_image.png")" alt="@(media.User?.UserName??"Unknown User")" class="user-avatar">
                                        <span class="username">@(media.User?.UserName?? "Unknown User")</span>
                                    </div>
                                    <small class="upload-time">@media.UploadedAt.ToString("dd MMM")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            @if(User.Identity.IsAuthenticated)
            {
                <div class="empty-state text-center py-5">
                    <i class="fas fa-music fa-3x mb-3"></i>
                    <h3>No audios yet</h3>
                    <p>Be the first to share audio on the platform!</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Media/Create/@(User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.NameIdentifier).Value)" class="btn btn-primary mt-2">Share your audio</a>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-primary mt-2">Join to start sharing</a>
                    }
                </div>
            }
         
        }
    </section>

    <!-- أحدث الفيديوهات -->
    <section class="video-media mb-5">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="fas fa-video me-2"></i>Latest videos
            </h2>
            <a href="/Media/Explore" class="view-all-link">View All<i class="fas fa-arrow-left ms-1"></i></a>
        </div>
        
        @if (Model.RecentVideoMedias.Any())
        {
            <div class="row">
                @foreach (var media in Model.RecentVideoMedias)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="media-card video-card">
                            <div class="card-image">
                                <img src="@media.ImageUrl" class="card-img-top" alt="@media.Title" loading="lazy">
                                <div class="card-overlay">
                                    <div class="overlay-content">
                                        <button class="btn-play-video" data-video-src="@media.Url">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="media-type-badge">
                                    <i class="fas fa-video"></i> Video
                                </div>
                                <div class="video-duration">3:45</div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@media.Title</h5>
                                <p class="card-text">@media.Descreption</p>
                                <div class="card-footer">
                                    <div class="user-info">
                                        <img src="@(media.User?.ProfilePicture ?? "/Uploads/Images/navs/default_nav_image.png" )" alt="@(media.User?.UserName ?? "Unknown User" )" class="user-avatar">
                                        <span class="username">@(media.User?.UserName ?? "Unknown User")</span>
                                    </div>
                                    <small class="upload-time">@media.UploadedAt.ToString("dd MMM")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state text-center py-5">
                <i class="fas fa-video fa-3x mb-3"></i>
                <h3>No videos yet</h3>
                <p>Be the first to share videos on the platform!</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Create" asp-controller="Media" asp-route-Id = "@User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.NameIdentifier).Value"   class="btn btn-primary mt-2">شارك فيديوهاتك</a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-primary mt-2">Join to start sharing</a>
                }
            </div>
        }
    </section>

    <!-- قسم الميزات -->
    <section class="platform-features py-5 mb-5">
        <div class="row text-center">
            <div class="col-md-4 feature-item mb-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-headphones"></i>
                </div>
                <h3>High-quality audio</h3>
                <p>Listen and share the best audio in high quality and clarity</p>
            </div>
            <div class="col-md-4 feature-item mb-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-film"></i>
                </div>
                <h3>HD quality videos</h3>
                <p>Watch and share videos in the highest possible quality</p>
            </div>
            <div class="col-md-4 feature-item mb-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Safe environment</h3>
                <p>A secure platform to share your creations freely and confidently</p>
            </div>
        </div>
    </section>

    <!-- دعوة للعمل -->
    @if (!User.Identity.IsAuthenticated)
    {
        <section class="cta-section text-center py-5 rounded">
            <h2 class="mb-3">Ready to start your creative journey?</h2>
            <p class="mb-4">Join thousands of creators and share your best audio and visual moments</p>
        </section>
    }
</div>

<!-- مشغل الصوتيات -->
<div class="audio-player" id="audioPlayer">
    <div class="player-container">
        <div class="track-info">
            <div class="track-title" id="currentTrackTitle">Clip name</div>
            <div class="track-artist" id="currentTrackArtist">Artist</div>
        </div>
        <div class="player-controls">
            <button class="control-btn" id="prevBtn">
                <i class="fas fa-step-backward"></i>
            </button>
            <button class="control-btn play-pause" id="playPauseBtn">
                <i class="fas fa-play"></i>
            </button>
            <button class="control-btn" id="nextBtn">
                <i class="fas fa-step-forward"></i>
            </button>
        </div>
        <div class="progress-container">
            <div class="progress-bar" id="progressBar">
                <div class="progress" id="progress"></div>
            </div>
            <div class="time-display">
                <span id="currentTime">0:00</span> / <span id="duration">0:00</span>
