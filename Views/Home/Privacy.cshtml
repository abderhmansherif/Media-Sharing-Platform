@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="simple-privacy">
    <div class="privacy-header text-center mb-5">
        <h1 class="main-title">
            <i class="fas fa-shield-alt me-3"></i>Privacy Policy
        </h1>
        <p class="subtitle">How we handle your information</p>
    </div>

    <div class="privacy-sections">
        <!-- Section 1 -->
        <div class="privacy-card">
            <div class="card-header">
                <div class="icon-wrapper">
                    <i class="fas fa-info-circle"></i>
                </div>
                <h3>Information We Collect</h3>
            </div>
            <div class="card-body">
                <p>We only collect what's necessary to make BeatBox work:</p>
                <ul class="simple-list">
                    <li><i class="fas fa-user text-primary"></i> Your email and name (for account)</li>
                    <li><i class="fas fa-music text-warning"></i> Songs you upload</li>
                    <li><i class="fas fa-chart-simple text-info"></i> Basic usage data</li>
                </ul>
            </div>
        </div>

        <!-- Section 2 -->
        <div class="privacy-card">
            <div class="card-header">
                <div class="icon-wrapper">
                    <i class="fas fa-lock"></i>
                </div>
                <h3>How We Protect Your Data</h3>
            </div>
            <div class="card-body">
                <p>Your safety is our priority:</p>
                <div class="protection-items">
                    <div class="protection-item">
                        <i class="fas fa-shield-check text-success"></i>
                        <span>Secure Firebase storage</span>
                    </div>
                    <div class="protection-item">
                        <i class="fas fa-key text-danger"></i>
                        <span>Encrypted passwords</span>
                    </div>
                    <div class="protection-item">
                        <i class="fas fa-eye-slash text-secondary"></i>
                        <span>No sharing with third parties</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 3 -->
        <div class="privacy-card">
            <div class="card-header">
                <div class="icon-wrapper">
                    <i class="fas fa-user-check"></i>
                </div>
                <h3>Your Control</h3>
            </div>
            <div class="card-body">
                <p>You're in charge of your data:</p>
                <div class="control-features">
                    <div class="feature">
                        <strong>Delete anytime</strong> - Remove your account and all data
                    </div>
                    <div class="feature">
                        <strong>Download your music</strong> - Your content is yours
                    </div>
                    <div class="feature">
                        <strong>Update profile</strong> - Change your info when you want
                    </div>
                </div>
                
                <div class="contact-simple mt-4">
                    <p><strong>Questions?</strong> Email us: 
                        <a href="mailto:abderhmansherif221@gmail.com" class="email-link">
                            abderhmansherif221@gmail.com
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .simple-privacy {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .main-title {
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: var(--secondary-color);
        font-size: 1.2rem;
    }

    .privacy-sections {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 3rem;
    }

    .privacy-card {
        background: rgba(30, 30, 30, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .privacy-card:hover {
        transform: translateY(-5px);
        border-color: var(--accent-color);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(253, 121, 168, 0.3);
    }

    .icon-wrapper {
        width: 50px;
        height: 50px;
        background: var(--gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-wrapper i {
        color: white;
        font-size: 1.5rem;
    }

    .card-header h3 {
        color: var(--light-color);
        margin: 0;
        font-size: 1.5rem;
    }

    .card-body {
        color: #bdc3c7;
        line-height: 1.6;
    }

    .simple-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0;
    }

    .simple-list li {
        padding: 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .simple-list i {
        font-size: 1.1rem;
        width: 20px;
    }

    .protection-items {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 1.5rem 0;
    }

    .protection-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .protection-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    .protection-item i {
        font-size: 1.2rem;
        width: 25px;
    }

    .control-features {
        margin: 1.5rem 0;
    }

    .feature {
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        margin-bottom: 0.8rem;
        border-left: 3px solid var(--secondary-color);
    }

    .feature strong {
        color: var(--accent-color);
    }

    .contact-simple {
        background: rgba(253, 121, 168, 0.1);
        padding: 1rem;
        border-radius: 10px;
        border-left: 4px solid var(--accent-color);
    }

    .email-link {
        color: var(--accent-color);
        text-decoration: none;
        font-weight: 600;
    }

    .email-link:hover {
        color: var(--secondary-color);
        text-decoration: underline;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .simple-privacy {
            margin: 1rem auto;
        }
        
        .main-title {
            font-size: 2rem;
        }
        
        .privacy-card {
            padding: 1.5rem;
        }
        
        .card-header {
            flex-direction: column;
            text-align: center;
            gap: 0.8rem;
        }
    }
</style>